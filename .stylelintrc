{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-scss"],
  "syntax": "scss",
  "ignoreFiles": ["**/*.ts", "**/*.tsx"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "selector-pseudo-class-no-unknown": [true, {"ignorePseudoClasses": ["global"]}]
  }
}
